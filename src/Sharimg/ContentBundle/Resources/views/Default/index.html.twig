{% extends "SharimgDefaultBundle::layout.html.twig" %}

{% block content %}
<div class="container">
    <h1>{{ 'content.contents'|trans }}</h1>

    {% for content in contents %}
    <div class="row">
        <div class="col-sm-6 col-md-3">
            <div class="thumbnail">
                <a href="{{ path('sharimg_content_view', {content: content.id}) }}">
                    <img src="{{ asset('images/' ~ content.path) }}" alt=".">
                    <div class="caption">
                        <h3>{{ content.description }}</h3>
                    </div>
                </a>
            </div>
        </div>
    </div>
    {% endfor %}
</div>
{% endblock %}